{

  "manifest_version": 2,
  "name": "Spotify Autopauser",
  "version": "1.0",
  "description": "Automatically pause spotify when a browser tab starts playing.",
  "icons": {
    "48": "icons/border-48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "autopauser@chronobuild.com",
      "strict_min_version": "42.0"
    }
  },
  "background": {
    "scripts": ["controls.js", "util.js", "spotify.js", "auth.js", "index.js"]
  },
  "permissions": [
    "*://developer.mozilla.org/*",
    "activeTab",
    "identity",
    "storage",
    "tabs"
  ]
}
